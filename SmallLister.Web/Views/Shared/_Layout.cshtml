@model SmallLister.Web.Model.BaseViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" sizes="16x16" href="/images/sml.png">
    <link rel="apple-touch-icon" href="/images/sml.png" sizes="32x32" />
    <title>Small:Lister@(Model.PageTitle)</title>

    <environment names="Development">
        <link rel="stylesheet" href="/lib/pickmeup/css/pickmeup.css" />
        <link rel="stylesheet" href="/css/smalllister.css" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/PickMeUp/3.2.1/css/pickmeup.css" integrity="sha512-5R2Om2Kryt5hqiLT76LS9Jkpji26njKU/9xZKfguGDZY575Zg3yqi1spdj6r1RVZYZZdw0/zfW8wZlfSKPAiHw==" crossorigin="anonymous" />
        <link rel="stylesheet" href="/css/smalllister.min.css" asp-append-version="true" />
    </environment>
    @RenderSection("HeaderScripts", required: false)
</head>
<body>
    <header>
        <nav class="navbar-header">
            <a href="/">
                <img src="/images/sml.png" height="38" width="38" />
                <span>
                    Small:Lister
                </span>
            </a>
        </nav>
        <nav class="navbar-main">
            <div class="navbar-nav">
                @if (Model.IsLoggedIn) {
                    <form method="get" action="/find">
                    <span class="narrow-hide"><input type="text" name="q" placeholder="Find item..." /> <input type="submit" value="Find"/> |</span> <a href="/lists">Edit lists</a> | <a href="/profile">Profile</a> | <a href="/signout">Logout</a>
                    </form>
                }
            </div>
            <div>
                <img class="nav-show" src="/images/add.png" height="24" width="24" />
                <img class="nav-close" src="/images/close.png" height="24" width="24" />
            </div>
        </nav>
    </header>

    <main>
      @RenderBody()
    </main>

    <footer class="footer ">
        &#169; @DateTime.Today.Year Small:Lister
    </footer>

    <environment names="Development">
        <script src="/lib/jquery/jquery.min.js"></script>
        <script src="/lib/jquery-sortable/jquery-sortable-min.js"></script>
        <script src="/lib/pickmeup/pickmeup.min.js"></script>
        <script src="/js/smalllister.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"
                asp-fallback-src="/lib/jquery/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous">
        </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-sortable/0.9.13/jquery-sortable-min.js"
                asp-fallback-src="/lib/jquery-sortable/jquery-sortable-min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous">
        </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/PickMeUp/3.2.1/pickmeup.min.js"
                integrity="sha512-zW9jU25wki/XuPm541IGdt3DY0YICfwpNjtXO9bzi5V/bYRxfvUoqQRSOBWL2BXZiFqu4nhp+0iz+7u64Xpm2Q=="
                crossorigin="anonymous"></script>
        <script src="/js/smalllister.min.js" asp-append-version="true"></script>
    </environment>

    <script type="text/javascript">
        $(function() { smlInitialise() })
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
